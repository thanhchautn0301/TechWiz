<style>

    .product, .product--pink, .product--yellow, .product--green, .product--red, .product--orange, .product--blue {
        box-shadow: 1px 5px 15px #ccc;
        width: 15em;
        height: auto;
        border-radius: 3px;
        padding: 2em;
        margin: 1em;
        overflow: hidden;
        position: relative;
        flex: auto;
    }

    .product--red {
        background: linear-gradient( -45deg, #E84855 50%, rgba(255, 255, 255, 0.5) 50%);
    }
    .product_inner {
        display: flex;
        align-items: center;
        flex-flow: column wrap;
    }

    .product img, .product--blue img, .product--orange img, .product--red img, .product--green img, .product--yellow img, .product--pink img {
        max-width: 100%;
        height: auto !important;
        text-align: center;
    }
    .product_inner p {
        color: rgba(255, 255, 255, 0.9);
    }
    .product_inner button {
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #FFF;
        border-radius: 3px;
        padding: 1em 3em;
        margin: 1em 0 0 0;
        background: none;
        cursor: pointer;
        transition: background ease-in 0.25s;
    }
        .product_inner button:before {
            font-family: FontAwesome;
            content: "";
            color: #FFF;
            position: absolute;
            font-size: 1.5em;
            margin: 0 -1.5em;
        }
    .product_overlay {
        background: rgba(255, 255, 255, 0.9);
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        transform: translateY(-500px);
        opacity: 0;
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
        align-items: center;
    }
</style>
